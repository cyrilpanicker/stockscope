{
  "name": "stockscope",
  "version": "0.0.1",
  "author": "cyrilpanicker@gmail.com",
  "main": "build/server/main.js",
  "scripts": {
    "create:logs-dir": "mkdirp ./logs",
    "remove:typings:server": "rimraf ./source/server/typings",
    "remove:typings:client": "rimraf ./source/client/typings",
    "install:typings:server": "npm run remove:typings:server && cd ./source/server && typings install",
    "install:typings:client": "npm run remove:typings:client && cd ./source/client && typings install",
    "install:typings": "concurrently \"npm run install:typings:server\" \"npm run install:typings:client\"",
    "remove:build:server": "rimraf ./build/server",
    "remove:build:client": "concurrently \"rimraf ./build/client\" \"rimraf ./build/client-bundled\"",
    "remove:build": "rimraf ./build",
    "compile:ts:server": "tsc --rootDir ./source/server --outDir ./build/server --project ./source/server",
    "compile:ts:client": "tsc --rootDir ./source/client --outDir ./build/client --project ./source/client",
    "copy:templates": "mkdirp ./build/client/templates && ncp ./source/client/templates ./build/client/templates",
    "bundle": "webpack",
    "build:server": "npm run remove:build:server && npm run compile:ts:server",
    "build:client": "npm run remove:build:client && concurrently \"npm run compile:ts:client\" \"npm run copy:templates\" && npm run bundle",
    "build": "npm run remove:build && concurrently \"npm run build:client\" \"npm run build:server\"",
    "postinstall": "npm run install:typings && concurrently \"npm run build\" \"npm run create:logs-dir\"",
    "start": "node ./build/server/main.js",
    "start:web": "node ./build/server/web-server.js"
  },
  "devDependencies": {
    "concurrently": "^2.1.0",
    "html-webpack-plugin": "^2.21.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "rimraf": "^2.5.2",
    "typescript": "^1.8.10",
    "typings": "^1.3.0",
    "webpack": "^1.13.1"
  },
  "dependencies": {
    "express": "^4.14.0",
    "jquery": "^3.0.0",
    "lodash": "^4.13.1",
    "moment": "^2.13.0",
    "mongodb": "^2.1.18",
    "request": "^2.72.0",
    "winston": "^2.2.0"
  }
}
