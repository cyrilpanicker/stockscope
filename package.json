{
  "name": "stockscope",
  "version": "0.0.1",
  "author": "cyrilpanicker@gmail.com",
  "main": "build/server/main.js",
  "scripts": {
    "create:logs-dir": "mkdirp ./logs",
    "remove:typings": "rimraf ./typings",
    "install:typings": "npm run remove:typings && typings install",
    "remove:build:server": "rimraf ./build/server",
    "remove:build:client": "concurrently \"rimraf ./build/client\" \"rimraf ./build/client-public\"",
    "remove:build": "rimraf ./build",
    "compile:ts": "tsc --rootDir ./source --outDir ./build",
    "copy:templates": "mkdirp ./build/client/templates && ncp ./source/client/templates ./build/client/templates",
    "copy:images": "mkdirp ./build/client-public/images && ncp ./source/client/images ./build/client-public/images",
    "bundle": "webpack",
    "build:server": "npm run remove:build:server && npm run compile:ts",
    "build:client": "npm run remove:build:client && concurrently \"npm run compile:ts\" \"npm run copy:templates\" && npm run bundle && npm run copy:images",
    "build": "npm run remove:build && concurrently \"npm run build:client\" \"npm run build:server\"",
    "postinstall": "npm run install:typings && concurrently \"npm run build\" \"npm run create:logs-dir\"",
    "start": "node ./build/server/main.js",
    "start:web": "node ./build/server/web-server.js"
  },
  "devDependencies": {
    "concurrently": "^2.1.0",
    "html-webpack-plugin": "^2.21.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "rimraf": "^2.5.2",
    "typescript": "^1.8.10",
    "typings": "^1.3.0",
    "webpack": "^1.13.1"
  },
  "dependencies": {
    "d3": "^3.5.16",
    "express": "^4.14.0",
    "jquery": "^3.0.0",
    "lodash": "^4.13.1",
    "moment": "^2.13.0",
    "mongodb": "^2.1.18",
    "request": "^2.72.0",
    "winston": "^2.2.0"
  }
}
